<h1> Create A Ride Here! </h1>


<%= form_tag '/group_rides', method: :post do %>

 

      <div class= "forms">
        <%= label_tag :name %>
        <%= text_field_tag :name %>
      </div>

      <div class= "forms">
        <%= label_tag :ride_type %>
        <%= text_field_tag :ride_type  %>
      
      </div>

      <div class= "forms">
        <%= label_tag :description %>
        <%= text_field_tag :description %>
      </div> 


      <div class= "forms">
        <%= label_tag :location %>
        <%= text_field_tag :location %>
      </div>

      
      <div class= "forms">
        <%= label_tag :length %>
        <%= text_field_tag :length %>
      </div>


      <div class= "forms">
        <%= label_tag :time %>
        <%= text_field_tag :time %>
      </div>


      <div class= "forms">
        <%= label_tag :date %>
        <%= text_field_tag :date %>
      </div>



      <div><%= submit_tag 'Save' %></div>


      <% end %>