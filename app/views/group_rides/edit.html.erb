



<%= form_tag "/group_rides/#{@ride.id}", method: :patch do %>

       <div class= "forms">
        <%= label_tag :name %>
        <%= text_field_tag :name, @ride.name %>
      </div>

      <div class= "forms">
        <%= label_tag :ride_type %>
        <%= text_field_tag :ride_type, @ride.ride_type  %>
      
      </div>

      <div class= "forms">
        <%= label_tag :description %>
        <%= text_field_tag :description, @ride.description %>
      </div> 


      <div class= "forms">
        <%= label_tag :location %>
        <%= text_field_tag :location, @ride.location %>
      </div>

      
      <div class= "forms">
        <%= label_tag :length %>
        <%= text_field_tag :length, @ride.length %>
      </div>


      <div class= "forms">
        <%= label_tag :time %>
        <%= text_field_tag :time, @ride.time %>
      </div>


      <div class= "forms">
        <%= label_tag :date %>
        <%= text_field_tag :date, @ride.date %>
      </div>



      <div><%= submit_tag 'Save' %></div>


      <% end %>